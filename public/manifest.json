{
    "name": "TimeKeeper",
    "description": "Helps you to achieve effective work/rest balance and reduce procrastination time to 0",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "tabs",
        "alarms",
        "notifications"
    ],
    "action": {
        "default_popup": "popup/popup.html"
    }
}